<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= titulo || "Mi Carrito - TechPC Store" %></title>
  <link rel="stylesheet" href="/css/carrito.css">
  <link rel="icon" href="/img/favicon.ico" />
</head>
<body>
  <header>
    <div class="logo">
      <a href="/home"><img src="/img/unnamed.png" alt="TechPC Store"></a>
    </div>
    <nav>
      <a href="/home">Home</a>
      <a href="/carrito">ðŸ›’ Carrito</a>
      <% if (!usuario) { %>
        <a href="/login">Login</a>
        <a href="/registro">Registro</a>
      <% } else { %>
        <span> <%= usuario.nombre %></span>
        <a href="/perfil">Perfil</a>
        <a href="#" id="logout-btn">Cerrar sesiÃ³n</a>
      <% } %>
    </nav>
  </header>

  <main class="container">
    <h1>Mi Carrito de Compras</h1>

    <% if (!items || items.length === 0) { %>
      <p>Tu carrito estÃ¡ vacÃ­o.</p>
    <% } else { %>
      <div id="carrito-contenedor">
        <% items.forEach(item => { %>
          <div class="producto-carrito">
            <img src="<%= item.Product.image_url || '/img/default.png' %>" alt="<%= item.Product.name %>">
            <div class="info-producto">
              <h3><%= item.Product.name %></h3>
              <p>Cantidad: <%= item.cantidad %></p>
              <p>Precio unitario: $<%= item.Product.price.toLocaleString() %></p>
              <p>Subtotal: $<%= (item.Product.price * item.cantidad).toLocaleString() %></p>
            </div>
            <form action="/carrito/eliminar" method="POST">
              <input type="hidden" name="cartId" value="<%= item.id %>">
              <button type="submit" class="btn-eliminar">Eliminar</button>
            </form>
          </div>
        <% }) %>
      </div>

      <h3 class="total">
        Total: $
        <%= items.reduce((acc, item) => acc + item.Product.price * item.cantidad, 0).toLocaleString() %>
      </h3>

      <form action="/carrito/finalizar" method="POST">
        <button type="submit" class="btn-finalizar">Finalizar Compra</button>
      </form>
    <% } %>
  </main>

  <footer>Â© TechPC Store 2025</footer>
</body>
</html>
