<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Iniciar sesión - TechPC Store</title>
  <link rel="stylesheet" href="/css/login.css" />
  <link rel="icon" href="/img/favicon.ico" />

  <!-- ✅ Primero tu script, define la función -->
  <script src="/scripts/login.js"></script>

  <!-- ✅ Después el script de Google (sin async ni defer) -->
  <script src="https://accounts.google.com/gsi/client"></script>
</head>

<body>
  <div class="titulo-pagina">TECHPC STORE</div>

  <div class="formulario" role="form" aria-label="Formulario de inicio de sesión">
    <h1>Inicio de sesión</h1>

    <form id="loginForm" action="/login" method="POST">
      <div class="usuario">
        <label for="usuario">Correo:</label>
        <input type="email" id="usuario" name="usuario" placeholder="ejemplo@correo.com" required
          aria-required="true" />
      </div>

      <div class="usuario">
        <label for="clave">Contraseña:</label>
        <input type="password" id="clave" name="clave" placeholder="Tu contraseña" required aria-required="true" />
      </div>

      <div class="usuario">
        <button type="submit" class="boton">Entrar</button>
      </div>

      <div id="loginMessage" style="display:none;"></div>

      <p class="recuperar-pass">
        <a href="/auth/recuperar-cuenta">¿Olvidaste tu contraseña?</a>
      </p>

      <p style="margin-top:12px;">
        ¿No tienes cuenta? <a href="/registro">Registrarse</a>
      </p>
    </form>

    <hr style="margin:20px 0;">

    <!-- ✅ Botón de Google -->
    <div id="g_id_onload"
      data-client_id="1009394864655-mtbfugom0ephlheoau1i91osd1bcvl1m.apps.googleusercontent.com"
      data-callback="handleCredentialResponse"
      data-auto_prompt="false">
    </div>

    <div class="g_id_signin"
      data-type="standard"
      data-shape="rectangular"
      data-theme="outline"
      data-text="signin_with"
      data-size="large"
      data-logo_alignment="left">
    </div>
  </div>

  <canvas id="canvas"></canvas>

  <script type="module" src="/js/diseñologin.js" defer></script>
</body>
</html>
